{
  "name": "Reddit YT Player",
  "version": "1.0",
  "description": "Build an Extension!",
  "permissions": ["activeTab", "<all_urls>"],
  "background": {
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "manifest_version": 2
}
